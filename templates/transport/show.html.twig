{% extends 'base.html.twig' %}

{% block title %}Transport{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Transport</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transport.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ transport.reference }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ transport.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('transport_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
    <a href="{{ path('transport_edit', {'id': transport.id}) }}" class="btn btn-warning">Modifier</a>
    <br><br>
    {{ include('transport/_delete_form.html.twig') }}
</div>
{% endblock %}
