{% extends 'base.html.twig' %}

{% block title %}Liste Article{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Liste Article</h1>
    </div>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>Prix_unitaire</th>
                <th>Prix_casse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.designation }}</td>
                <td>{{ article.prixUnitaire }}</td>
                <td>{{ article.prixCasse }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-warning">voir</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouver!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(articles) }}
    </div>

    <a href="{{ path('article_new') }}" class="btn btn-success">Cr√©er</a>
</div>
{% endblock %}
