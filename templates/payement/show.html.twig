{% extends 'base.html.twig' %}

{% block title %}Payement{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Payement</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payement.id }}</td>
            </tr>
            <tr>
                <th>Mode</th>
                <td>{{ payement.mode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('payement_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
