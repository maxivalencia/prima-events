{% extends 'base.html.twig' %}

{% block title %}Liste de commande{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Liste de commande</h1>
    </div>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Reférence</th>
                <th>Désignation</th>
                <th>Quantite</th>
                <th>NB Jour</th>
                <th>P.U</th>
                <th>Remise</th>
                <th>Montant</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.reference }}</td>
                <td>{{ stock.article.designation }}</td>
                <td>{{ stock.quantite }}</td>
                <td>
                    {% set difference = date(stock.dateRetourPrevu).diff(date(stock.dateSortiePrevue)) %}
                    {% set leftDays = difference.days %}
                    {{ leftDays  }}
                </td>
                <td>{{ stock.article.prixunitaire }} Ar</td>
                <td>{{ stock.remise }} Ar</td>
                <td>{{ stock.quantite * stock.article.prixunitaire }} Ar</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun enregistrement trouver!</td>
            </tr>
        {% endfor %}
            {% if caution != 0 %}
            <tr>
                <td colspan="6" align="right">Caution</td>
                <td>{{ caution }} Ar</td>
            </tr>
            {% endif %}
            <tr>
                <td colspan="6" align="right">Total</td>
                <td>{{ total }} Ar</td>
            </tr>
            {% if tvaCollecter != 0 %}
            <tr>
                <td colspan="6" align="right">TVA</td>
                <td>{{ tvaCollecter }} Ar</td>
            </tr>
            {% endif %}
            <tr>
                <td colspan="6" align="right">TTC</td>
                <td>{{ ttc }} Ar</td>
            </tr>
            {% if transport != 0 %}
            <tr>
                <td colspan="6" align="right">Transport</td>
                <td>{{ transport }} Ar</td>
            </tr>
            {% endif %}
            {% if remise != 0 %}
            <tr>
                <td colspan="6" align="right">Remise</td>
                <td>{{ remise }} Ar</td>
            </tr>
            {% endif %}
            {% if indemnite != 0 %}
                <tr>
                    <td colspan="6" align="right">Indeminté</td>
                    <td>{{ indemnite }} Ar</td>
                </tr>
            {% endif %}
            <tr>
                <td colspan="6" align="right">Net à Payer</td>
                <td>{{ netapayer }} Ar</td>
            </tr>
        </tbody>
    </table>

    <br>
    <a href="{{ path('facture_pdf', {'ref': reference}) }}" class="btn btn-success">Imprimer</a>
</div>
{% endblock %}
