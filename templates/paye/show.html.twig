{% extends 'base.html.twig' %}

{% block title %}Paye{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Paye</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ paye.id }}</td>
            </tr>
            <tr>
                <th>Refstock</th>
                <td>{{ paye.refstock }}</td>
            </tr>
            <tr>
                <th>DatePayement</th>
                <td>{{ paye.datePayement ? paye.datePayement|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>TVA</th>
                <td>{{ paye.TVA ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('paye_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
    <a href="{{ path('paye_edit', {'id': paye.id}) }}" class="btn btn-warning">Modifier</a>
    <br><br>
    {{ include('paye/_delete_form.html.twig') }}
</div>
{% endblock %}
