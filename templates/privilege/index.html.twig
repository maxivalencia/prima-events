{% extends 'base.html.twig' %}

{% block title %}Privilege index{% endblock %}

{% block body %}
    <h1>Privilege index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Privilege</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for privilege in privileges %}
            <tr>
                <td>{{ privilege.id }}</td>
                <td>{{ privilege.privilege }}</td>
                <td>
                    <a href="{{ path('privilege_show', {'id': privilege.id}) }}">show</a>
                    <a href="{{ path('privilege_edit', {'id': privilege.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('privilege_new') }}">Create new</a>
{% endblock %}
