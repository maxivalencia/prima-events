{% extends 'base.html.twig' %}

{% block title %}Indemnite{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Indemnite</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ indemnite.id }}</td>
            </tr>
            <tr>
                <th>Refence</th>
                <td>{{ indemnite.refence }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ indemnite.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('indemnite_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
    <a href="{{ path('indemnite_edit', {'id': indemnite.id}) }}"class="btn btn-warning">Modifier</a>
    <br><br>
    {{ include('indemnite/_delete_form.html.twig') }}
</div>
{% endblock %}
