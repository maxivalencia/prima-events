{% extends 'base.html.twig' %}

{% block title %}Liste Stock{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Liste Stock</h1>
    </div>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Article</th>
                <th>Quantite</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.article.designation }}</td>
                <td>{{ stock.quantite }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun enregistrement trouver!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(stocks) }}
    </div>
    <br>
    <a href="{{ path('etat_stock_PDF') }}" class="btn btn-success">Export</a>

    
</div>
{% endblock %}
