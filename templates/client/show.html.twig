{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Client</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ client.telephone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.adresse }}</td>
            </tr>
            <tr>
                <th>CIN  ou NIF</th>
                <td>{{ client.CIN }}</td>
            </tr>
            <tr>
                <th>STAT</th>
                <td>{{ client.STAT }}</td>
            </tr>
            <tr>
                <th>Type de client</th>
                <td>{{ client.typeClient }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
    <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-warning">Modifier</a>
    <br><br>
    {{ include('client/_delete_form.html.twig') }}
</div>
{% endblock %}
