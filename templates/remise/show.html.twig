{% extends 'base.html.twig' %}

{% block title %}Remise{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Remise</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ remise.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ remise.reference }}</td>
            </tr>
            <tr>
                <th>Taux</th>
                <td>{{ remise.taux }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('remise_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
    <a href="{{ path('remise_edit', {'id': remise.id}) }}" class="btn btn-warning">Modifier</a>
    <br><br>
    {{ include('remise/_delete_form.html.twig') }}
</div>
{% endblock %}
