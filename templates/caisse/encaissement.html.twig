{% extends 'base.html.twig' %}

{% block title %}Encaissement{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <h1>Créer encaissement</h1>
    </div>
    <hr>

    <br><br>

    {{ include('paye/_form.html.twig') }}
    <br>
    <a href="{{ path('caisse') }}" class="btn btn-primary">Terminer</a>
    <br><br>

    <table class="table">
        <thead>
            <tr>
                <th>Reférence</th>
                <th>Date</th>
                <th>Montant</th>
                <th>TVA</th>
                <th>Mode de payement</th>                
                <th>Motif de payement</th>
            </tr>
        </thead>
        <tbody>
        {% for paye in payes %}
            <tr>
                <td>{{ paye.refstock }}</td>
                <td>{{ paye.datePayement ? paye.datePayement|date('Y-m-d') : '' }}</td>
                <td>{{ paye.montant }} Ar</td>
                <td>{{ paye.TVA ? 'Oui' : 'Non' }}</td>
                <td>{{ paye.typepayement }}</td>
                <td>{{ paye.motifPayement }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouver!</td>
            </tr>
        {% endfor %}
        {% for transp in transport %}
            <tr>                
                <td colspan="6">Transport : </td>
                <td>{{ transport.prix }} Ar</td>
            </tr>
        {% endfor %}
        {% for remi in remise %}
            <tr>                
                <td colspan="6">Remise : </td>
                <td>{{ remi.prix }} Ar</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br><br><br>
    <h3>Transport</h3>
    {{ include('transport/_form.html.twig') }}

    <br><br><br>
    <h3>Remise</h3>
    {{ include('remise/_form.html.twig') }}

</div>
{% endblock %}
