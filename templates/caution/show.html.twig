{% extends 'base.html.twig' %}

{% block title %}Caution{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Caution</h1>
    </div>
    <hr>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ caution.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ caution.reference }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ caution.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('caution_index') }}" class="btn btn-primary">Retour</a>
    <br><br>
    <a href="{{ path('caution_edit', {'id': caution.id}) }}" class="btn btn-warning">Modifier</a>
    <br><br>
    {{ include('caution/_delete_form.html.twig') }}
</div>
{% endblock %}
