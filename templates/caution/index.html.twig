{% extends 'base.html.twig' %}

{% block title %}Liste Caution{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Liste Caution</h1>
    </div>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for caution in cautions %}
            <tr>
                <td>{{ caution.id }}</td>
                <td>{{ caution.reference }}</td>
                <td>{{ caution.prix }}</td>
                <td>
                    <a href="{{ path('caution_show', {'id': caution.id}) }}" class="btn btn-warning">voir</a>
                    <a href="{{ path('caution_edit', {'id': caution.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouver!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(cautions) }}
    </div>

    <a href="{{ path('caution_new') }}" class="btn btn-success">Cr√©er</a>
</div>
{% endblock %}
