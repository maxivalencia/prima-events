{% extends 'base.html.twig' %}

{% block title %}Liste Mode{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Liste Mode</h1>
    </div>
    <hr>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mode in modes %}
            <tr>
                <td>{{ mode.id }}</td>
                <td>{{ mode.mode }}</td>
                <td>
                    <a href="{{ path('mode_show', {'id': mode.id}) }}" class="btn btn-warning">voir</a>
                    <a href="{{ path('mode_edit', {'id': mode.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouver!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(modes) }}
    </div>

    <a href="{{ path('mode_new') }}" class="btn btn-success">Cr√©er</a>
</div>
{% endblock %}
