{% extends 'base.html.twig' %}

{% block title %}Sortie d'article{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <h1>Cr√©ation de commande</h1>
    </div>
    <hr>

    <br><br>

    {{ include('stock/_form.html.twig') }}
    <br>
    <a href="{{ path('sortie') }}" class="btn btn-primary">Terminer</a>
    <br><br>

    <table class="table">
        <thead>
            <tr>
                <th>Article</th>
                <th>Quantite</th>
                <th>Reference</th>
                <th>Date Commande</th>
                <th>Date Sortie Prevue</th>
                <th>Date Retour Prevu</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.article.designation }}</td>
                <td>{{ stock.quantite }}</td>
                <td>{{ stock.reference }}</td>
                <td>{{ stock.dateCommande ? stock.dateCommande|date('Y-m-d') : '' }}</td>
                <td>{{ stock.dateSortiePrevue ? stock.dateSortiePrevue|date('Y-m-d') : '' }}</td>
                <td>{{ stock.dateRetourPrevu ? stock.dateRetourPrevu|date('Y-m-d') : '' }}</td>
                <td><a href="{{ path('commande_edit', {'id': stock.id}) }}" class="btn btn-danger">edit</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun enregistrement trouver!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
